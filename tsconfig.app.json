{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,

    // Vue + Vite
    "types": ["vite/client"],
    "jsx": "preserve",
    "useDefineForClassFields": true
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "src/env.d.ts"]
}
